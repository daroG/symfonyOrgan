{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Masses list:</h1>

    <ul>
        {% for mass in masses %}
            <li>{{ mass.title }} - {{ mass.author }} | <a href="{{ path('mass_update', {id:mass.id}) }}">Edit</a> </li>
        {% endfor %}
    </ul>

    <a href="{{ path('mass_create') }}">Create new Mass</a>

</div>
{% endblock %}
